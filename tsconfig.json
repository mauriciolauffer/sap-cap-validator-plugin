{
  "compilerOptions": {
    "noEmit": true,
    "module": "CommonJS",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "node",
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/dist",
    "node_modules",
    "coverage"
  ]
}
